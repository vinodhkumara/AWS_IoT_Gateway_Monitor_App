<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mbitiotgatewaymonitor">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/iot_gateway"
        android:label="@string/app_name"
        android:roundIcon="@drawable/iot_gateway"
        android:supportsRtl="true"
        android:theme="@style/IoTAppTheme">
        <activity android:name=".HistoryScreen"
            android:label="@string/statistics_screen" >
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>